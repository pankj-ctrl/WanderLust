<% layout("/layouts/boilerplate") %>

<% if (allListings.length>0){ %>
<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 listing-card mt-3 ps-4 pe-4">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b><br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                             <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                        </p>
                       
                    </div>
                </div>
            </a>
            <% } %>
    </div>
    <% } else{%>
        <div class="alert alert-info mt-4" role="alert">
        No listings found for your search. Please try a different destination!
    </div>
    <% } %>
