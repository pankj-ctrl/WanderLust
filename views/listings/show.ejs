<% layout("/layouts/boilerplate") %>
<script>
    const mapToken= "<%=  process.env.MAP_TOKEN %>";
    const listing= <%- JSON.stringify(listingD) %>;
    
</script>

    <div class="row mt-5">
        <div class="col-8 offset-3 mt-3">
            <h3>
                <%= listingD.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 mt-3 show-card listing-card">
            <img src="<%= listingD.image.url %>" class="card-img-top show-img" alt="listing">
            <div class="card-body">
                <p class="card-text"> <i>
                        Owned by <%= listingD.owner.username %>
                    </i></p>
                <p class="card-text">
                    <%= listingD.description %>
                </p>

                <p class="card-text">
                    &#8377;
                    <%= listingD.price.toLocaleString("en-IN") %>
                </p>
                <p class="card-text">
                    <%= listingD.location %>
                </p>
                <p class="card-text">
                    <%= listingD.country %>
                </p>


            </div>
        </div>

        <% if(currentUser && listingD.owner.equals(currentUser._id)){ %>
            <div class="btns">
                <a href="/listings/<%=listingD._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form method="POST" action="/listings/<%=listingD.id%>?_method=DELETE">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
            <% } %>
                <div class="col-8 offset-3 mb-3 mt-3">

                    <% if(currentUser) {%>
                        <hr>
                        <h4>Leave a Review</h4>
                        <form method="post" action="/listings/<%=listingD.id%>/reviews" novalidate
                            class="needs-validation">
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-slot">

                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]"" value=" 5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please submit some comment for review</div>
                            </div>
                            <button class="mt-2 btn btn-outline-dark ">Submit</button>
                        </form>
                        <% } %>

                            <% if(listingD.reviews.length>0){ %>
                                <div class="row mt-2">
                                    <p><b>All Reviews</b></p>
                                    <% for(review of listingD.reviews){ %>
                                        <div class="card col-5 ms-3 mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title">@<%= review.author.username %>
                                                </h5>
                                                <p class="starability-result card-text"
                                                    data-rating="<%= review.rating %>">
                                                </p>
                                                <p class="card-text">
                                                    <%= review.comment %>
                                                </p>
                                            </div>
                                            <form class="mb-3" method="post"
                                                action="/listings/<%=listingD.id%>/reviews/<%=review.id%>?_method=DELETE">
                                                <button class="btn btn-sm btn-dark">Delete</button>
                                            </form>
                                        </div>
                                        <% } %>
                                </div>
                                <% } %>

                </div>
                <div class="col-8 offset-3 mb-3 mt-3">
                    <h3>Where you'll be</h3>
                    <div id="map"></div>
                </div>
    </div>


<script src="/js/map.js"></script>